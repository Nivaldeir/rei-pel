generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             String        @id @unique @default(uuid())
  city           String
  code           String
  representative String
  email          String        @unique
  password       String
  isAdmin        Boolean?      @default(false)
  clients        Client[]
  productSheel   ProductSale[]
}

model Client {
  id                String        @id @unique @default(uuid())
  code              String        @default(cuid())
  identification    String?
  name              String?
  stateRegistration String?
  razaoSocial       String?
  classification    String?
  city              String
  state             String
  tell              String?
  email             String?       @unique
  userId            String?
  user              User?         @relation(fields: [userId], references: [id])
  productSheel      ProductSale[]
}

model Product {
  id          String @id @unique @default(uuid())
  code        String
  description String
  apres       String
  ipi         String
  table1      Float
  table2      Float
  table3      Float
}

model ProductQuantity {
  id            String       @id @unique @default(uuid())
  code          String
  description   String
  price         Float
  quantity      Int
  discount      Float
  ProductSale   ProductSale? @relation(fields: [productSaleId], references: [id])
  productSaleId String?
}

model ProductSale {
  id                  String            @id @unique @default(uuid())
  codePedidoEcommerce String
  codePedido          String
  numeroPedido        String
  createAt            DateTime          @default(now())
  product             ProductQuantity[]
  obs                 String
  transport           String
  planSale            String
  clientId            String
  userId              String
  user                User              @relation(fields: [userId], references: [id])
  client              Client            @relation(fields: [clientId], references: [id])
}
